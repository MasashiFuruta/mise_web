
.container
  .row
    .col-md-6.offset-md-3.text-center
      %h2 アカウント作成(管理者用)
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        .form-group
          = f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス', autofocus: true, autocomplete: "email"

        .form-group
          - if @minimum_password_length
            = f.password_field :password, :class => 'form-control', :placeholder => "英数" + "#{@minimum_password_length}" + "文字以上", autocomplete: "off"

        .form-group
          = f.password_field :password_confirmation,  :class => 'form-control', :placeholder => 'パスワード(確認)', autocomplete: "off"

        .actions
          = f.submit "登録", :class => 'btn btn-primary'

      = render "devise/shared/links"