
.container
  .row
    .col-md-6.offset-md-3.text-center.py-3
      %h2.my-4 アカウント作成(管理者)
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "partial/deviseErrMsg"

        .form-group
          .input-group
            %span.input-group-addon.bg-danger.text-white
              %i.fa.fa-envelope.px-2.py-2
            = f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス', autofocus: true, autocomplete: "email"

        .form-group
          .input-group
            %span.input-group-addon.bg-danger.text-white
              %i.fa.fa-key.px-2.py-2
            - if @minimum_password_length
              = f.password_field :password, :class => 'form-control', :placeholder => "英数" + "#{@minimum_password_length}" + "文字以上", autocomplete: "off"

        .form-group
          .input-group
            %span.input-group-addon.bg-danger.text-white
              %i.fa.fa-key.px-2.py-2
            = f.password_field :password_confirmation,  :class => 'form-control', :placeholder => 'パスワード(確認)', autocomplete: "off"

        .actions
          = f.submit "登録", :class => 'btn btn-danger rounded-0'

      = render "devise/shared/links"
