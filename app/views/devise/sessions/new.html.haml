.container
  .row
    .col-md-6.offset-md-3.text-center
      %br/
      %h2 ログイン
      %br/
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

        .form-group
          = f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス', autofocus: true, autocomplete: "email"

        .form-group
          = f.password_field :password, :class => 'form-control', :placeholder => 'パスワード', autocomplete: "off"

        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :パスワードを保存する

        .actions
          = f.submit "ログイン", class: "btn btn-primary"

      = render "devise/shared/links"