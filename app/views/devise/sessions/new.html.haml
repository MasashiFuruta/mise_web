.container
  .row
    .col-md-6.offset-md-3.text-center.py-3
      %h2.my-4 ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

        .form-group
          .input-group
            %span.input-group-addon.bg-danger.text-white
              %i.fa.fa-envelope.px-2.py-2
            = f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス', autofocus: true, autocomplete: "email"

        .form-group
          .input-group
            %span.input-group-addon.bg-danger.text-white
              %i.fa.fa-key.px-2.py-2
            = f.password_field :password, :class => 'form-control', :placeholder => 'パスワード', autocomplete: "off"

        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :パスワードを保存する

        .actions
          = f.submit "ログイン", class: "btn btn-danger rounded-0"

      = render "devise/shared/links"
